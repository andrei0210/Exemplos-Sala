import java.util.Scanner;

public class ExempleFor {

    //i++ é igual a i+i +1
    // for(variavel; condicao; incremento){}d
    public static void main(String[] args){

        int numero = 0;
        int ateQuanto =0;

        Scanner scanner = new Scanner(System.in);

        System.out.println("Informe o valor para multiplicar:");
        numero = scanner.nextInt();

        System.out.println("ate quando deseja multiplicar?:");
        ateQuanto = scanner.nextInt();

        for (int i = 0;i <= ateQuanto;i++) {
            System.out.println(numero + " x "+ i + " = " + i*numero);


            if(i*numero % 2 ==0){

            System.out.println("È par");
            }else{
                System.out.println("È impar");
            }


        }


    }
}
